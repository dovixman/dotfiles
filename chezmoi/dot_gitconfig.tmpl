[user]
    name = {{ .name | quote }}
    email = {{ .email | quote }}

[core]
    editor = nvim
    pager = delta
    autocrlf = input
    excludesfile = ~/.gitignore_global

[init]
    defaultBranch = main

[push]
    default = simple
    autoSetupRemote = true

[pull]
    rebase = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[delta]
    navigate = true
    light = false
    side-by-side = true
    line-numbers = true

[interactive]
    diffFilter = delta --color-only

[alias]
    co = checkout
    br = branch
    ci = commit
    st = status
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = !gitk
    lg = log --oneline --graph --decorate --all
    amend = commit --amend --no-edit
    wip = commit -am "WIP"
    unwip = reset HEAD~1

[github]
    user = {{ .github_username | quote }}

[credential]
    helper = osxkeychain